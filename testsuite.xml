<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="ThanhLeTestSuite">
	<parameter name="webURL" value="https://useinsider.com/" />
	<parameter name="implicitWaitTimeout" value="10" />
	<parameter name="explicitWaitTimeout" value="30" />
	<parameter name="pageLoadTimeout" value="30" />
	<parameter name="baseUrl" value="https://petstore.swagger.io/v2" />
	
	<listeners>
        <listener class-name="thanhle.insider.utility.ExtentReportListener" />
    </listeners>
    
    <test thread-count="2" parallel="methods" name="APIPetTest">
    	<parameter name="test-type" value="API" />
		<classes>
			<class name="thanhle.insider.test.api.GetPetTest" />
			<class name="thanhle.insider.test.api.PostPetTest" />
			<class name="thanhle.insider.test.api.PutPetTest" />
			<class name="thanhle.insider.test.api.DeletePetTest" />
		</classes>
	</test>	
	
	<test thread-count="2" parallel="methods" name="ChromeTest">
		<parameter name="test-type" value="UI" />
		<parameter name="browser" value="Chrome" />
		<classes>
			<class
				name="thanhle.insider.test.web.CareersTest" />
		</classes>
	</test>
	
	<test thread-count="2" parallel="methods" name="FireFoxTest">
		<parameter name="test-type" value="UI" />
		<parameter name="browser" value="FireFox" />
		<classes>
			<class
				name="thanhle.insider.test.web.CareersTest" />
		</classes>
	</test>
	
</suite>
